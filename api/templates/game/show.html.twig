{% extends 'base.html.twig' %}

{% block title %}Game{% endblock %}

{% block body %}
    <h1>Game</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ game.id }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ game.status }}</td>
            </tr>
            <tr>
                <th>Difficulty</th>
                <td>{{ game.difficulty }}</td>
            </tr>
            <tr>
                <th>MaxPlayer</th>
                <td>{{ game.maxPlayer }}</td>
            </tr>
            <tr>
                <th>StartedAt</th>
                <td>{{ game.startedAt ? game.startedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>EndAt</th>
                <td>{{ game.endAt ? game.endAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ServerVersion</th>
                <td>{{ game.serverVersion }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_game_index') }}">back to list</a>

    <a href="{{ path('app_game_edit', {'id': game.id}) }}">edit</a>

    {{ include('game/_delete_form.html.twig') }}
{% endblock %}
